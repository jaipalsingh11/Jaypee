---
import Mainlayout from "../layouts/Layout.astro";

const {
  title = "Project Title",
  context = "Project description here",
  videoUrl, // YouTube URL (any format)
  cloud1 = "/Images/cloud.png",
  cloud2 = "/Images/cloud.png",
  cloud3 = "/Images/cloud3.png",
} = Astro.props;

// Convert any YouTube URL into a proper embed URL
function toEmbed(url) {
  if (!url) return "";
  const u = new URL(url);
  let id = "";

  if (u.hostname.includes("youtu.be")) {
    id = u.pathname.slice(1);
  } else if (u.pathname.startsWith("/shorts/")) {
    id = u.pathname.split("/")[2] || "";
  } else if (u.searchParams.get("v")) {
    id = u.searchParams.get("v") || "";
  }

  const list = u.searchParams.get("list");
  let embed = id
    ? `https://www.youtube-nocookie.com/embed/${id}`
    : list
      ? `https://www.youtube-nocookie.com/embed/videoseries?list=${list}`
      : "";

  if (embed) {
    embed += embed.includes("?") ? "&" : "?";
    embed += "rel=0&modestbranding=1&color=white";
  }

  return embed;
}

const embed = toEmbed(videoUrl);
---

<Mainlayout id="main">
  <div id="container">
    <h1 id="about-project">{title}</h1>
    <p><b>Context:</b> {context}</p>

    <img id="cloud1" src={cloud1} alt="" />
    <img id="cloud2" src={cloud2} alt="" />
    <img id="cloud3" src={cloud3} alt="" />
  </div>

  <div id="bigcontainer">
    <div class="video-container">
      {
        embed ? (
          <div class="video-wrap">
            <iframe
              class="video"
              src={embed}
              title={title}
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
              loading="lazy"
              referrerpolicy="strict-origin-when-cross-origin"
            />
          </div>
        ) : (
          <p class="video-error">
            Invalid YouTube link. Please pass a full <code>videoUrl</code>.
          </p>
        )
      }
    </div>
  </div>
</Mainlayout>

<script>
  // Smooth scroll (same as other layout)
  if (window.innerWidth > 600) {
    let targetScroll = window.scrollY;
    let currentScroll = window.scrollY;
    const speed = 0.08;

    window.addEventListener(
      "wheel",
      (e) => {
        targetScroll += e.deltaY;
        targetScroll = Math.max(0, targetScroll);
        e.preventDefault();
      },
      { passive: false }
    );

    function smoothScroll() {
      currentScroll += (targetScroll - currentScroll) * speed;
      window.scrollTo(0, currentScroll);
      requestAnimationFrame(smoothScroll);
    }
    smoothScroll();
  }

  // Dynamic title resizing (same as other pages)
  const aboutProject = document.getElementById("about-project");
  const container = document.getElementById("container");

  function fitText() {
    let fontSize = 400;
    aboutProject.style.fontSize = fontSize + "px";
    while (aboutProject.scrollWidth > container.clientWidth && fontSize > 10) {
      fontSize -= 1;
      aboutProject.style.fontSize = fontSize + "px";
    }
  }

  window.addEventListener("load", fitText);
  window.addEventListener("resize", fitText);
</script>

