<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>

  <body>
    <!-- Custom cursor image -->
    <img id="custom-cursor" src="/cursor.png" alt="cursor" />

    <header>
      <div id="gradient"></div>

      <nav class="nav-bar">
        <ul class="nav-list">
          <div class="nav-left">
            <li><a href="/">Home</a></li>
            <li><a href="/works">Works</a></li>
          </div>

          <li class="logo"><img src="/Logo.png" alt="Logo" /></li>

          <div class="nav-right">
            <li><a href="/interests">Interests</a></li>
            <li><a href="/mystory">My Story</a></li>
          </div>
        </ul>
      </nav>
    </header>

    <slot />

    <footer>
      <img id="image" width="100%" src="/treefooter.png" alt="" />
    </footer>

     <script>
    const cursor = document.getElementById("custom-cursor");
    let rotation = 0;
    let lastScroll = window.scrollY;

    // Follow mouse
    document.addEventListener("mousemove", (e) => {
      const target = e.target;

      // Hide PNG cursor & show native hand on buttons/links
      if (target.tagName === "BUTTON" || target.tagName === "A") {
        cursor.style.display = "none";
      } else {
        cursor.style.display = "block";
        cursor.style.top = e.clientY + "px";
        cursor.style.left = e.clientX + "px";
      }
    });

    // Rotate PNG cursor on scroll
    window.addEventListener("scroll", () => {
      if (window.scrollY > lastScroll) {
        rotation += 10;
      } else {
        rotation -= 10;
      }
      lastScroll = window.scrollY;

      cursor.style.transform = `translate(-50%, -50%) rotate(${rotation}deg)`;
    });
  </script>
  </body>
</html>

<style>

  * {
      cursor: none !important;
    }

    /* Show native hand on buttons and links */
    button,
    a {
      cursor: pointer !important;
    }

  body {
    cursor: none; /* hide default cursor */
    height: 100vh;
    overflow-x: clip;
  }

  #custom-cursor {
    position: fixed;
    top: 0;
    left: 0;
    width: 48px;
    height: 48px;
    pointer-events: none; /* don't block clicks */
    transform: translate(-50%, -50%);
    transition: transform 0.05s linear;
    z-index: 9999;
  }

  * {
    margin: 0;
    padding: 0;
    max-width: 100vw;
  }

  #gradient {
    height: 1000px;
    width: 100%;
    background: linear-gradient(to bottom, #7fc1e3, #ffffff);
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
  }

  .nav-bar {
    padding: 50px 20px;
    display: flex;
    justify-content: center;
  }

  .nav-list {
    position: fixed;
    width: 100%;
    z-index: 1000;
    width: 90%;
    max-width: 1800px;
    background: white;
    border-radius: 70px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 30px;
    list-style: none;
    outline: solid rgb(125, 173, 205);
    outline-width: 1.8px;
    height: fit-content;
  }

  .nav-left,
  .nav-right {
    display: flex;
    font-family: "Recoleta", Georgia, serif;
    gap: 45px;
