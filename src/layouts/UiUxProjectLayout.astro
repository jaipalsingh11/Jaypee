---
import Mainlayout from "../layouts/Layout.astro";

const {
  title = "Project Title",
  context = "Project description here",
  galleryImages = [],
  cloud1 = "/Images/cloud.png",
  cloud2 = "/Images/cloud.png",
  cloud3 = "/Images/cloud3.png",

  // NEW: optional text + buttons under the images
  ctaTitle = "Want to know more?",
  ctaBody = "Hereâ€™s a bit more context about the project, decisions made, and links to explore.",
  ctas = [
    { label: "View Case Study", href: "/case-study", variant: "primary" },
    { label: "Live Demo", href: "https://example.com", variant: "outline" },
  ],
} = Astro.props;
---

<Mainlayout id="main">
  <div id="container">
    <h1 id="about-project">{title}</h1>
    <p><b>Context:</b> {context}</p>

    <img id="cloud1" src={cloud1} alt="" />
    <img id="cloud2" src={cloud2} alt="" />
    <img id="cloud3" src={cloud3} alt="" />
  </div>

  <div id="bigcontainer">
    <div class="vertical-carousel">
      {
        galleryImages.map((src, i) => (
          <div class="slide" key={i}>
            <img src={src} alt={`Slide ${i + 1}`} loading="lazy" decoding="async" />
          </div>
        ))
      }
    </div>

    <!-- NEW: Text + Buttons section -->
    <section class="cta-section">
      <div class="cta-wrap">
        <h2 class="cta-title">{ctaTitle}</h2>
        <p class="cta-body">{ctaBody}</p>

        <div class="cta-buttons">
          {
            ctas.map((btn) => (
              <a
                href={btn.href}
                class={`btn ${btn.variant === "outline" ? "btn-outline" : "btn-primary"}`}
                rel="noopener noreferrer"
                target={btn.href?.startsWith("http") ? "_blank" : "_self"}
              >
                {btn.label}
              </a>
            ))
          }
        </div>
      </div>
    </section>
  </div>
</Mainlayout>

<script>
  if (window.innerWidth > 600) {
    let targetScroll = window.scrollY;
    let currentScroll = window.scrollY;
    const speed = 0.08;

    window.addEventListener(
      "wheel",
      (e) => {
        targetScroll += e.deltaY;
        targetScroll = Math.max(0, targetScroll);
        e.preventDefault();
      },
      { passive: false }
    );

    function smoothScroll() {
      currentScroll += (targetScroll - currentScroll) * speed;
      window.scrollTo(0, currentScroll);
      requestAnimationFrame(smoothScroll);
    }
    smoothScroll();
  }

  const aboutProject = document.getElementById("about-project");
  const container = document.getElementById("container");

  function fitText() {
    let fontSize = 400;
    aboutProject.style.fontSize = fontSize + "px";
    while (aboutProject.scrollWidth > container.clientWidth && fontSize > 10) {
      fontSize -= 1;
      aboutProject.style.fontSize = fontSize + "px";
    }
  }

  window.addEventListener("load", fitText);
  window.addEventListener("resize", fitText);
</script>

<style>
  .vertical-carousel {
    display: flex;
    flex-direction: column;
    gap: 20px;
    max-width: 1700px;
    margin: 0 auto;
  }

  .slide {
    position: relative;
    display: inline-block;
  }

  .slide::before {
    content: "";
    position: absolute;
    top: -6px;
    left: -6px;
    right: -6px;
    bottom: -6px;
    border-radius: 16px;
    z-index: 1;
  }

  .slide img {
    position: relative;
    z-index: 2;
    display: block;
    width: 100%;
    height: auto;
    border-radius: 1px;
  }

  #container {
    display: flex;
    flex-direction: column;
    max-width: 1700px;
    margin: 50px auto;
    position: relative;
    height: fit-content;
    z-index: 1;
  }

  #cloud1 {
    position: absolute;
    top: 290px;
    left: -360px;
  }

  #cloud2 {
    position: absolute;
    top: -120px;
    right: -930px;
    width: 1600px;
  }

  #cloud3 {
    display: none;
  }

  #about-project {
    color: aliceblue;
    font-family: "Recoleta", Georgia, serif;
    margin: 50px auto;
    font-weight: 100;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: clip;
    width: 100%;
    text-align: center;
  }

  #bigcontainer {
    background-color: white;
    border-top: 1px #a3c7e3 solid;
    z-index: 2;
    padding: 0 0 60px 0;
    min-height: 100vh;
    width: 100%;
  }

  #bigcontainer img {
    max-width: 100%;
  }

  /* NEW: CTA section styles */
  .cta-section {
    margin-top: 40px;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .cta-wrap {
    width: min(100%, 1200px);
    padding: 24px 20px 8px;
    border-top: 1px solid #e4edf6;
  }

  .cta-title {
    font-family: "Recoleta", Georgia, serif;
    font-size: clamp(24px, 3vw, 40px);
    color: #2c5e85;
    margin: 6px 0 12px 0;
    text-align: center;
  }

  .cta-body {
    font-family: cloudthin, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
    font-size: clamp(16px, 1.7vw, 20px);
    color: #476e8e;
    line-height: 1.6;
    text-align: center;
    margin: 0 auto;
    max-width: 900px;
  }

  .cta-buttons {
    font-family: "Recoleta", Georgia, serif;
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    justify-content: center;
    margin-top: 18px;
  }

  .btn {
    appearance: none;
    text-decoration: none;
    padding: 12px 18px;
    border-radius: 14px;
    font-weight: 600;
    font-size: 16px;
    line-height: 1;
    transition: transform .12s ease, box-shadow .12s ease, background-color .12s ease, color .12s ease, border-color .12s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1.8px solid transparent;
  }

  .btn-primary {
    background: #3498db;
    color: #fff;
    box-shadow: 0 6px 16px rgba(52,152,219,0.25);
  }
  .btn-primary:hover { transform: translateY(-1px); box-shadow: 0 8px 20px rgba(52,152,219,0.30); }
  .btn-primary:active { transform: translateY(0); }

  .btn-outline {
    background: #ffffff;
    color: #2c5e85;
    border-color: #a3c7e3;
  }
  .btn-outline:hover { background: #f6fbff; }

  #container p {
    font-family: cloudthin;
    font-size: 35px;
    color: #476e8e;
    margin-top: -75px;
    padding: 0 30px;
    z-index: 5;
    font-weight: 700;
  }
  #container p b {
    font-family: cloud;
    font-weight: 100;
  }

  @media (max-width: 600px) {
    #cloud2 { display: none; }

    #container {
      max-width: 90%;
      margin: 20px;
    }

    #cloud1 {
      position: absolute;
      top: 100px;
      left: -170px;
      width: 400px;
      opacity: 70%;
    }
    #cloud3 {
      display: block;
      position: absolute;
      top: 0px;
      right: -20px;
      width: 150px;
      opacity: 70%;
    }

    #container p {
      font-size: 15px;
      margin-top: -5px;
      padding: 0;
      margin-bottom: 0;
    }

    #about-project {
      color: aliceblue;
      font-family: "Recoleta", Georgia, serif;
      margin: 0;
      font-weight: 100;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: clip;
      width: 100%;
      text-align: center;
      margin-top: 20px;
    }
  }
</style>
