  <script is:inline>
    // Filtering
    const buttons = document.querySelectorAll(".menu-item");
    const projects = document.querySelectorAll(".grid-container > *");

    function applyFilter(filter, button) {
      buttons.forEach((btn) => btn.classList.remove("active"));
      button.classList.add("active");

      projects.forEach((project) => {
        const gridItem = project.querySelector(".grid-item");
        const category = gridItem
          ? gridItem.getAttribute("data-category")
          : null;

        if (filter === "all" || category === filter) {
          // show before animating
          project.style.display = "block";
          requestAnimationFrame(() => {
            project.classList.remove("fade-out");
            project.classList.add("fade-in");
          });
        } else {
          project.classList.remove("fade-in");
          project.classList.add("fade-out");

          // wait for animation, then hide
          setTimeout(() => {
            project.style.display = "none";
          }, 300);
        }
      });
    }

    // click + touch events
    buttons.forEach((button) => {
      const filter = button.getAttribute("data-filter");

      button.addEventListener("click", () => {
        applyFilter(filter, button);
      });

      button.addEventListener("touchstart", (e) => {
        e.preventDefault();
        applyFilter(filter, button);
      });
    });
  </script>
