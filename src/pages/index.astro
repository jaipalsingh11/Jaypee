  </div>

  <script is:inline>
    window.addEventListener("scroll", function () {
      const container = document.getElementById("container");
      const scrollY = window.scrollY;
      const fadePoint = 600;

      let opacity = 1 - scrollY / fadePoint;
      if (opacity < 0) opacity = 0;
      if (opacity > 1) opacity = 1;

      container.style.opacity = opacity;
    });
    const buttons = document.querySelectorAll(".menu-item");
    const projects = document.querySelectorAll(".grid-item");

    buttons.forEach((button) => {
      button.addEventListener("click", () => {
        // Remove active class from all buttons
        buttons.forEach((btn) => btn.classList.remove("active"));
        button.classList.add("active");

        const filter = button.getAttribute("data-filter");
        projects.forEach((project) => {
          if (
            filter === "all" ||
            project.getAttribute("data-category") === filter
          ) {
            project.style.display = "block";
          } else {
            project.style.display = "none";
          }
        });
      });
    });
  </script>
</Mainlayout>

<style>
  .grid-item {
    position: relative; /* So overlay can position itself over the image */
    overflow: hidden;
    border-radius: 20px;
    border: 2px solid #a3c7e3;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    background-color: white;
    height: 250px;
  }

  .overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0),
      rgba(0, 0, 0, 0.8)
    );
    color: white;
    font-size: 20px;
    padding-top: 40px;
    padding-left: 20px;
    padding-bottom: 15px;
    padding-right: 20px;
    text-align: left;
    opacity: 0;
    transition: opacity 0.7s ease;
    font-family: cloud;
    font-weight: 100;
    text-shadow: black 1px 1px;
  }

  .grid-item:hover .overlay {
    opacity: 1;
  }

  .grid-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* 3 columns */
    gap: 20px;
    margin: 0 auto;
    max-width: 1700px;
  }

  .grid-item {
    position: relative;
    overflow: hidden;
    border-radius: 20px;
    border: 2px solid #a3c7e3;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    background-color: white;
    height: 250px;
  }

  .grid-item img:hover {
    transform: scale(1.06);
  }

  .grid-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 20px;
    transition: transform 0.9s ease;
  }

  .menu-container {
    display: flex;
    gap: 20px;
    padding: 20px 20px;
    border: 1px solid #a3c7e3;
    border-radius: 20px;
    background-color: white;
    max-width: 70%;
    margin: 20px auto;
    font-family: "Recoleta", Georgia, serif;
    max-width: 1690px;
    display: flex;
    justify-content: space-evenly;
    position: sticky;
    top: 140px;
    z-index: 10;
  }

  .menu-item {
    padding: 5px 20px;
    border-radius: 15px;
    background-color: #f0f8ff;
    color: #3290ca;
    font-size: 30px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .menu-item.active {
    background-color: #3290ca;
    color: white;
  }

  .menu-item:hover {
    background-color: #cbe8f8;
  }

  #hey {
    color: rgb(255, 255, 255);
    font-size: 80px;
    font-family: "Recoleta", Georgia, serif;
    margin-top: 100px;
  }

  #sun {
    margin-bottom: 1%;
  }

  #container {
    transition: opacity 0.5s ease;
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    max-width: 1700px;
    position: relative;
    transition: opacity 0.5s ease;
  }

  #cloud1 {
    position: absolute;
    top: 500px;
    left: -100px;
  }
  #cloud2 {
    position: absolute;
    top: 150px;
    right: -430px;
    width: 1600px;
  }

  #visual {
    margin-top: 1px;
    display: flex;
    width: 1000px;
    justify-self: right;
  }

  #designer {
    align-self: flex-end;
    width: 1200px;
  }
  .bigcontainer {
    height: fit-content;
  }
</style>
