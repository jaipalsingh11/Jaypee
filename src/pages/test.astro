    position: absolute;
    top: 150px;
    right: -430px;
    width: 1600px;
  }

  #visual {
    margin-top: 1px;
    display: flex;
    width: 100%;
    max-width: 1000px;
    justify-self: right;
  }

  #designer {
    align-self: flex-end;
    width: 1200px;
  }
  .bigcontainer {
    height: fit-content;
  }
</style>
